#!/usr/bin/python2

import sys
import time
import logging

from growd.hw.raspberry import Raspberry
from growd.hw.relay import Relay
import growd.utils

def main():
    growd.utils.setup_logging(verbose=True)

    with Raspberry() as rpi:
        relay = Relay(rpi, 16)

        st = True
        while True:
            time.sleep(2)
            logging.info('Relay: %s' % st)
            relay.switch(st)
            st ^= True

if __name__ == '__main__':
    main()
