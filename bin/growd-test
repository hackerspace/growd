#!/usr/bin/python2

import sys
import time
import logging

from growd.hw.watchdog import Watchdog
import growd.utils

def main():
    growd.utils.setup_logging(verbose=True)

    with Watchdog() as dog:
        for i in range(30):
            logging.info('Feeding the dog')
            dog.keepalive()
            time.sleep(2)


if __name__ == '__main__':
    main()
